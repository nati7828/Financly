<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorDarkGray"
    app:cardElevation="5dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:weightSum="10">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="40dp"
            android:src="@drawable/circle_loading"
            android:contentDescription="@string/icon"
            android:id="@+id/main_rv_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4.8"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/category_name"
                android:textColor="@color/colorWhite"
                android:id="@+id/main_rv_category_name"
                android:layout_gravity="start|top"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/main_rv_category_details"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="00/00/00"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:id="@+id/main_rv_date"
                android:layout_gravity="start|bottom"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <TextView
            android:padding="1dp"
            android:layout_width="0dp"
            android:layout_weight="4.0"
            android:layout_height="match_parent"
            android:text="â‚ª 100,000,000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textDirection="ltr"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/main_rv_money_text"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</android.support.v7.widget.CardView>