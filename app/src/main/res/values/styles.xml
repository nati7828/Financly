<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkGray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CostumeToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkGray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkGray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorVeryDarkGray</item>
    </style>

    <style name="date_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="textColorAlertDialogListItem">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorHint</item>
    </style>

    <style name="time_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="textColorAlertDialogListItem">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorVeryDarkGray</item>
        <item name="android:textColorSecondary">@color/colorDarkGray</item>
    </style>

    <style name="expandedToolbarTitlePositive">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="collapsedToolbarTitlePositive">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="expandedToolbarTitleZero">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="collapsedToolbarTitleZero">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="expandedToolbarTitleNegative">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="collapsedToolbarTitleNegative">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="moneyShekelIconPositive">
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="moneyShekelIconNegative">
        <item name="android:text">nati</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

</resources>
